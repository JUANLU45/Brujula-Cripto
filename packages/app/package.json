  "engines": {
    "node": "20",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "prebuild": "cd ../types && pnpm build",
    "build": "next build",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('.next/standalone/packages/types',{recursive:true});fs.cpSync('../types/dist','.next/standalone/packages/types/dist',{recursive:true});fs.mkdirSync('.next/standalone/.next',{recursive:true});const routesFile=fs.existsSync('.next/routes-manifest.json')?'.next/routes-manifest.json':'.next/app-path-routes-manifest.json';fs.copyFileSync(routesFile,'.next/standalone/.next/routes-manifest.json');\"",
    "start": "NODE_ENV=production node server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@brujula-cripto/types": "workspace:*",
    "@hookform/resolvers": "^5.2.1",
    "@tiptap/extension-image": "^3.4.2",
    "@tiptap/extension-link": "^3.4.2",
    "@tiptap/react": "^3.4.2",
    "@tiptap/starter-kit": "^3.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.2.1",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "next-intl": "^4.3.8",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.3",
    "postcss": "^8.4.24",
    "typescript": "^5.0.0"
  }
}
